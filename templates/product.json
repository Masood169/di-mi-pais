{
  "wrapper": "div",
  "sections": {
    "curve": {
      "type": "curve",
      "settings": {}
    },
    "main": {
      "type": "template--product",
      "blocks": {
        "product-title": {
          "type": "product-title",
          "settings": {}
        },
        "product-price": {
          "type": "product-price",
          "settings": {
            "show_discount": "value",
            "tax_included": false,
            "shipping_policy": false
          }
        },
        "315e8027-8f8c-49c1-9624-d75d4b1eb602": {
          "type": "product-description",
          "disabled": true,
          "settings": {}
        },
        "product-options": {
          "type": "product-options",
          "settings": {}
        },
        "quantity-selector": {
          "type": "quantity-selector",
          "settings": {}
        },
        "payment-buttons": {
          "type": "payment-buttons",
          "settings": {
            "show_smart_checkout": false
          }
        },
        "shop-pay": {
          "type": "shop-pay",
          "settings": {}
        },
        "social-sharing": {
          "type": "social-sharing",
          "disabled": true,
          "settings": {
            "social_align": "left",
            "social_sharing_facebook": true,
            "social_sharing_twitter": true,
            "social_sharing_pinterest": true
          }
        },
        "cross-sells": {
          "type": "cross-sells",
          "disabled": true,
          "settings": {
            "title": "Don't forget...",
            "cross_sell_product_1": "",
            "cross_sell_product_2": "",
            "cross_sell_product_3": "",
            "cross_sell_bg": "#f8f8f8"
          }
        },
        "c07b4981-c135-468e-a069-7a9af72d5aea": {
          "type": "complementary-products",
          "settings": {
            "title": "Pairs well with...",
            "products_to_show": 5,
            "products_per_page": 1,
            "complementary_block_bg": "#f8f8f8"
          }
        }
      },
      "block_order": [
        "product-title",
        "product-price",
        "315e8027-8f8c-49c1-9624-d75d4b1eb602",
        "product-options",
        "quantity-selector",
        "payment-buttons",
        "shop-pay",
        "social-sharing",
        "cross-sells",
        "c07b4981-c135-468e-a069-7a9af72d5aea"
      ],
      "custom_css": [
        ".label.custom-font.product-description-header {text-transform: capitalize; letter-spacing: 0;}",
        "input#quantity {background: white;}"
      ],
      "settings": {
        "show_out_of_stock_email": true,
        "out_of_stock_email_position": "below-details",
        "hide_out_of_stock": true,
        "thumbnail_changes_variant": true,
        "image_display": "full-size",
        "enable_zoom": false,
        "enable_video_loop": false
      }
    },
    "bd00c7f6-9c6d-428b-8f8f-f2dae6f9d4b5": {
      "type": "image-with-video",
      "settings": {
        "subheading": "{{ product.metafields.custom.title_red.value }}",
        "title": "{{ product.metafields.custom.title_yellow.value }}",
        "description": "{{ product.metafields.custom.description_video | metafield_tag }}",
        "url": "{{ product.metafields.custom.videorecipe.value }}",
        "autoplay": false,
        "loop": true,
        "mute": false,
        "width_classes": "video-width--100"
      }
    },
    "product-recommendations": {
      "type": "template--product--recommendations",
      "custom_css": [
        ".title-bar h2 {color: #e01d09 !important; font-weight: 900 !important;}",
        "@media (max-width: 1000px) {h2 {font-size: 2.4em !important; line-height: 50px; }}",
        "@media (min-width: 1000px) {h2 {font-size: 4em !important; line-height: 70px; }}"
      ],
      "settings": {
        "show_product_recommendations": true,
        "product_recommendations_heading": "You may also like"
      }
    }
  },
  "order": [
    "curve",
    "main",
    "bd00c7f6-9c6d-428b-8f8f-f2dae6f9d4b5",
    "product-recommendations"
  ]
}